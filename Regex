let quoteSampleNegatedChar = "3 blind mice.";
let negatedCharRegex = /[^aieou0-9]/gi; // Change this line
let resultNegatedChar = quoteSampleNegatedChar.match(negatedCharRegex); // Change this line
console.log(resultNegatedChar);




console.log("---------------------------------------");
console.log("Match Characters that Occur One or More Times")
/*
You want to find matches when the letter s occurs one or more times in Mississippi. Write a regex that uses the + sign.
*/

let difficultSpelling = "Mississippi";
let myRegex = /s+/gi; // Change this line
let resultOneOrMore = difficultSpelling.match(myRegex);
console.log(resultOneOrMore)


