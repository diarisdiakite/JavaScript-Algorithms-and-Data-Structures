let quoteSampleAtoZ = "The quick brown fox jumps over the lazy dog.";
let alphabetRegex = /[a-z]/gi; // Change this line
let resultAtoZ = quoteSampleAtoZ.match(alphabetRegex); // Change this line
console.log(resultAtoZ)



console.log("---------------------------------------");
console.log("Match a range of letters and numbers")
/*
Create a single regex that matches a range of letters between h and s, and a range of numbers between 2 and 6. Remember to include the appropriate flags in the regex.
*/

let quoteSampleLettersAndNumbers = "Blueberry 3.141592653s are delicious.";
let LettersAndNumbersRegex = /[h-s2-6]/gi; // Change this line
let resultLettersAndNumbers = quoteSampleLettersAndNumbers.match(LettersAndNumbersRegex); // Change this line
console.log(resultLettersAndNumbers.length)





